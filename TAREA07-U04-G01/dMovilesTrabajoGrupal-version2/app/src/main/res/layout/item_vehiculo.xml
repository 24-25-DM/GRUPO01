<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/imagenVehiculo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_vehicle"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btnTomarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomar Foto"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Placa (AAA-0000)"
                android:inputType="text"
                android:maxLength="8" />

            <TextView
                android:id="@+id/marca"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Marca" />

            <TextView
                android:id="@+id/fechaFabricacion"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:focusable="false"
                android:hint="Fecha de FabricaciÃ³n (DD/MM/AAAA)"
                android:inputType="none" />

            <TextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Color" />

            <TextView
                android:id="@+id/costo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal"
                android:text="Costo" />

            <TextView
                android:id="@+id/activo"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Activo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:drawableBottom="@drawable/edit_va" />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawableBottom="@drawable/borrar_va" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>